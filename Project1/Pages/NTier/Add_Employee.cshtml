@page
@model Add_EmployeeModel
@{
}
@{
    Html.RenderPartialAsync("_Message");
}

<link href="https://unpkg.com/gijgo@1.9.14/css/gijgo.min.css" rel="stylesheet" type="text/css" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">


<div class="container p-4 mx-auto mb-5 shadow-lg rounded bg-dark bg-opacity-25 w-50 h-75">

    <h1 class="text-secondary"> Add record </h1>
    <form method="post" enctype="multipart/form-data" class="d-grid gap-3">

        <!-- Name -->
        <div class="row form-group m-2">
            <label class="col-sm-2 col-form-label fw-bold"> Name </label>
            <div class="col">
                @Html.TextBoxFor(m => m.FName, new { placeholder="First name", @class="form-control"})
                @Html.ValidationMessageFor(m=>m.FName)
            </div>
            <div class="col">
                @Html.TextBoxFor(m => m.LName, new { placeholder="Last name", @class="form-control"})
            </div>
        </div>

        <!-- Email -->
        <div class="row form-group m-2">
            <label class="col-sm-2 col-form-label fw-bold"> Email </label>
            <div class="col">
                @Html.TextBoxFor(m => m.Email, new { placeholder="Email", @class="form-control"})
                @Html.ValidationMessageFor(m=>m.Email)
            </div>
        </div>

        <!-- Phone -->
        <div class="row form-group m-2">
            <label class="col-sm-2 col-form-label fw-bold"> Phone </label>
            <div class="col">
                @Html.TextBoxFor(m => m.Phone, new { placeholder="Phone", @class="form-control"})
                @Html.ValidationMessageFor(m=>m.Phone)
            </div>
        </div>

        <!-- Status -->
        <div class="row form-group m-2">
            <label class="col-sm-2 col-form-label fw-bold">Status</label>
            <div class="col">
                @Html.DropDownListFor(m => m.Status, new SelectList(Model.StatusList), "Select Status", new { @class = "form-select" })
                @Html.ValidationMessageFor(m=>m.Status)
            </div>
        </div>


        <!-- DOB -->
        <div class="row form-group m-2">
            <label class="col-sm-2 col-form-label fw-bold"> DOB </label>
            <div class="col">
                @Html.TextBoxFor(m => m.DOB, new { placeholder="DOB", @class=" form-control", id="tbDOB" } )
                @Html.ValidationMessageFor(m=>m.DOB)
            </div>
        </div>


        <!-- Gender -->
        <div class="row form-group m-2">
            <label class="col-sm-2 col-form-label fw-bold">Gender</label>
            <div class="col">
                @Html.DropDownListFor(m => m.Gender, new SelectList(Model.GenderList), "Select Gender", new { @class = "form-select" })
            </div>
        </div>

        <!-- ProfilePic -->
        <div class="row form-group p-2">
            <label for="ProfilePic" class="col-sm-2 col-form-label fw-bold"> Profile Pic </label>
            <div class="col">
                <input type="file" name="ProfilePic" class="form-control" />
            </div>
        </div>

        <!-- Skills -->
        <div class="row form-group m-2">
            <label class="col-sm-2 col-form-label fw-bold"> Skills </label>
            <div class="col">
                @Html.TextBoxFor(m => m.Skills, new { placeholder="Skills", @class="form-control"})
                @Html.ValidationMessageFor(m=>m.Skills)
            </div>
        </div>

        <!-- Address -->
        <div class="row form-group m-2">
            <label class="col-sm-2 col-form-label fw-bold"> Address </label>
            <div class="col">
                @Html.TextBoxFor(m => m.Address, new { placeholder="Address", @class="form-control"})
                @Html.ValidationMessageFor(m=>m.Address)
            </div>
        </div>

        <div class="row form-group m-2">
            <!-- Is dependent -->
            <div class="col-sm-2 m-auto">
                @Html.CheckBoxFor(m => m.Isdependent, new { @class="form-check-input ms-2", id="Isdependent" })
            </div>
            <label for="Isdependent" class="col col-form-label fw-bold"> Is dependent </label>
            <button type="submit" class="col-md-2 btn btn-primary px-2" id="btnAdd" onclick="TempBlockAndSubmit();"> Add </button>
        </div>

    </form>
</div>


@section scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://unpkg.com/gijgo@1.9.14/js/gijgo.min.js" type="text/javascript"></script>

    <script src="~/js/jquery.blockui.js"></script>

    <script type="text/javascript">

        function TempBlockAndSubmit() {
            $.blockUI();
            setTimeout($.unblockUI(), 3000);
        }

        $('#tbDOB').datepicker({
            uiLibrary: 'bootstrap5'
        });

    </script>
    }